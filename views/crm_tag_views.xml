<?xml version="1.0"?>
<odoo>
    <record id="view_crm_tag_form_sales_team" model="ir.ui.view">
        <field name="name">crm.tag.form.sales.team</field>
        <field name="model">crm.tag</field>
        <field name="inherit_id" ref="sales_team.sales_team_crm_tag_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="color" position="after">
                <field name="sales_team_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
    <record id="view_crm_tag_tree_sales_team" model="ir.ui.view">
        <field name="name">crm.tag.tree.sales.team</field>
        <field name="model">crm.tag</field>
        <field name="inherit_id" ref="sales_team.sales_team_crm_tag_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="color" position="after">
                <field name="sales_team_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>
